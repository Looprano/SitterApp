<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/candidamiSit"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="60dp"
                android:backgroundTint="@color/colorPrimary"
                android:text="@string/candidami"
                android:textColor="@android:color/background_light"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/openFamilyProfile"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tableNoticeSit" />

            <TextView
                android:id="@+id/titleDettagliSit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="@string/dettaglioAnnuncio"
                android:textColor="@color/colorScritte"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TableLayout
                android:id="@+id/tableNoticeSit"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleDettagliSit">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/nav_header_vertical_spacing">

                    <TextView
                        android:id="@+id/usernameDettagliSit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/contact_number"
                        android:text="@string/username"
                        android:textColor="@color/colorScritte"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/usernameDettagliSit2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/username"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/nav_header_vertical_spacing">

                    <TextView
                        android:id="@+id/dataDettagliSit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/contact_number"
                        android:text="@string/data"
                        android:textColor="@color/colorScritte"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/dataDettagliSit2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/data"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/nav_header_vertical_spacing">

                    <TextView
                        android:id="@+id/oraInizioDettagliSit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/contact_number"
                        android:text="@string/orainizio"
                        android:textColor="@color/colorScritte"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/oraInizioDettagliSit2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/orainizio"
                        android:textSize="18sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/nav_header_vertical_spacing">

                    <TextView
                        android:id="@+id/oraFineDettagliSit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/contact_number"
                        android:text="@string/orafine"
                        android:textColor="@color/colorScritte"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/oraFineDettagliSit2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/orafine"
                        android:textSize="18sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/nav_header_vertical_spacing">

                    <TextView
                        android:id="@+id/descrizioneDettagliSit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/contact_number"
                        android:text="@string/descrizione"
                        android:textColor="@color/colorScritte"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/descrizioneDettagliSit2"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="@string/descrizione"
                        android:textSize="18sp" />

                </TableRow>

            </TableLayout>

            <Button
                android:id="@+id/openFamilyProfile"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="60dp"
                android:backgroundTint="@color/colorPrimary"
                android:text="@string/visualizzaProfiloFamiglia"
                android:textColor="@android:color/background_light"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/candidamiSit"
                app:layout_constraintTop_toBottomOf="@+id/tableNoticeSit" />

        </android.support.constraint.ConstraintLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>