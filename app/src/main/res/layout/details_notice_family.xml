<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/eliminaAnnuncio"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="60dp"
                android:backgroundTint="@color/colorPrimary"
                android:text="@string/eliminaAnnuncio"
                android:textColor="@android:color/background_light"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/visualCandidate"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tableNoticeFam" />

            <Button
                android:id="@+id/visualCandidate"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="60dp"
                android:backgroundTint="@color/colorPrimary"
                android:text="@string/visualizzaCandidate"
                android:textColor="@android:color/background_light"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/eliminaAnnuncio"
                app:layout_constraintTop_toBottomOf="@+id/tableNoticeFam" />

            <TextView
                android:id="@+id/titleDettagliFam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="@string/dettaglioAnnuncio"
                android:textColor="@color/colorScritte"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TableLayout
                android:id="@+id/tableNoticeFam"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleDettagliFam">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/nav_header_vertical_spacing">

                    <TextView
                        android:id="@+id/usernameDettagliFam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/contact_number"
                        android:text="@string/username"
                        android:textColor="@color/colorScritte"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/usernameDettagliFam2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/username"
                        android:textSize="18sp"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/nav_header_vertical_spacing">

                    <TextView
                        android:id="@+id/dataDettagliFamiglia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/contact_number"
                        android:text="@string/data"
                        android:textColor="@color/colorScritte"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/dataDettagliFamiglia2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/data"
                        android:textSize="18sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/nav_header_vertical_spacing">

                    <TextView
                        android:id="@+id/oraInizioDettagliFamiglia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/contact_number"
                        android:text="@string/orainizio"
                        android:textColor="@color/colorScritte"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/oraInizioDettagliFamiglia2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/orainizio"
                        android:textSize="18sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/nav_header_vertical_spacing">

                    <TextView
                        android:id="@+id/oraFineDettagliFamiglia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/contact_number"
                        android:text="@string/orafine"
                        android:textColor="@color/colorScritte"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/oraFineDettagliFamiglia2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/orafine"
                        android:textSize="18sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/nav_header_vertical_spacing">

                    <TextView
                        android:id="@+id/descrizioneDettagliFamiglia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/contact_number"
                        android:text="@string/descrizione"
                        android:textColor="@color/colorScritte"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/descrizioneeDettagliFamiglia2"
                        android:layout_width="235dp"
                        android:layout_height="wrap_content"
                        android:text="@string/descrizione"
                        android:textSize="18sp" />

                </TableRow>

            </TableLayout>

        </android.support.constraint.ConstraintLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>